
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

include author

block content
  article.article
    header
      p.date
        span= moment.utc(page.metadata.date).format('DD. MMMM YYYY')
      h2
        a(href=page.url)= page.title
      p.author
        mixin author(page.metadata.author)
    section.content!= typogr(page.html).typogrify()

